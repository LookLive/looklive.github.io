<li class="media" id="app_{{id}}">
    <div class="media">
      <div class="media-left">
        <a href="">
          <img class="media-object" src="http:{{avatar.url}}" style="width: 50px; height: 50px;">
        </a>
      </div>
      <div class="media-body" id="app_body_{{id}}">
        <h4 class="media-heading">{{subject.name}}</h4>
        <p>appears at {{pretty_timestamp timestamp}}, wearing</p>
        <span class="label label-info" id="timer_{{id}}">Showing for 10 more seconds</span>
      </div>
    </div>
</li>
